{
  "name": "brewblox-ui",
  "version": "0.1.0",
  "description": "UI for the Brewblox brewing controller",
  "author": "Elco Jacobs / BrewPi B.V.",
  "repository": "https://github.com/BrewBlox/brewblox-ui",
  "license": "GPL-3.0",
  "scripts": {
    "ci": "rm -rf node_modules; yarn install --frozen-lockfile",
    "makecert": "bash dev/makecert.sh",
    "redis:load": "node dev/redis_load.js",
    "redis:save": "node dev/redis_save.js",
    "redis": "yarn redis:load",
    "spark:save": "node dev/spark_save.js",
    "spark:load": "node dev/spark_load.js",
    "spark": "yarn spark:load",
    "compose:setup": "yarn redis && yarn spark",
    "compose:new": "yarn makecert && docker-compose up -d --force-recreate && yarn compose:setup",
    "serve": "quasar dev",
    "start": "yarn compose:new && yarn serve",
    "build": "yarn makecert && quasar build",
    "devbuild": "rm -r dev/dist/*; yarn build && cp -r dist/* dev/dist/",
    "devtools": "vue-devtools",
    "test": "yarn test:unit",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore ./src ./test",
    "lint:fix": "yarn lint --fix",
    "test:unit": "jest --updateSnapshot",
    "test:unit:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "test:unit:watchAll": "jest --watchAll",
    "serve:test:coverage": "quasar serve test/jest/coverage/lcov-report/ --port 8788",
    "concurrently:dev:jest": "concurrently \"quasar dev\" \"jest --watch\""
  },
  "dependencies": {
    "@quasar/extras": "^1.10.11",
    "axios": "^0.22.0",
    "buffer": "^6.0.3",
    "core-js": "^3.16.3",
    "d3": "^7.0.3",
    "date-fns": "^2.23.0",
    "dompurify": "^2.3.1",
    "elkjs": "^0.7.1",
    "fromentries": "^1.3.2",
    "js-quantities": "^1.7.6",
    "lodash": "^4.17.21",
    "marked": "^4.0.10",
    "mqtt": "^4.2.8",
    "nanoid": "^3.1.25",
    "parse-duration": "^1.0.0",
    "pinia": "^2.0.0-rc.10",
    "plotly.js": "^2.4.1",
    "portal-vue": "^3.0.0-beta.0",
    "process": "^0.11.10",
    "quasar": "^2.0.4",
    "simple-keyboard": "^3.2.64",
    "simple-keyboard-layouts": "^3.0.194",
    "svg-path-properties": "^1.0.11",
    "timezones": "nayarsystems/posix_tz_db#master",
    "typescript-string-enums": "^1.0.0",
    "vue-router": "^4.0.11",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@quasar/app": "^3.1.0",
    "@types/d3": "^7.0.0",
    "@types/dompurify": "^2.2.3",
    "@types/jest": "^27.0.2",
    "@types/js-quantities": "^1.6.2",
    "@types/lodash": "^4.14.172",
    "@types/marked": "^4.0.1",
    "@types/node": "16.10.2",
    "@types/plotly.js": "^1.54.14",
    "@types/webpack-env": "^1.16.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@vue/devtools": "^6.0.0-beta.21",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-rc.12",
    "babel-jest": "^27.2.4",
    "babel-plugin-transform-imports": "^2.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-quasar": "^1.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^7.17.0",
    "eslint-webpack-plugin": "^3.0.1",
    "fibers": "^5.0.0",
    "fork-ts-checker-webpack-plugin": "^6.3.3",
    "jest": "^27.2.4",
    "minimist": "^1.2.5",
    "node-sass": "^6.0.1",
    "prettier": "^2.3.2",
    "prettier-eslint": "^13.0.0",
    "sass-loader": "^12.1.0",
    "svgpath": "^2.3.1",
    "ts-jest": "^27.0.5",
    "tsutils": "^3.20.0",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-template-compiler": "^2.6.14",
    "webpack-bundle-analyzer": "^4.4.2"
  },
  "engines": {
    "node": ">= 14",
    "npm": ">= 6.4.1"
  },
  "browserslist": [
    "defaults",
    "not IE > 0"
  ]
}
