{
  "name": "brewblox-ui",
  "version": "0.1.0",
  "description": "UI for the Brewblox brewing controller",
  "author": "Elco Jacobs / BrewPi B.V.",
  "repository": "https://github.com/BrewBlox/brewblox-ui",
  "license": "GPL-3.0",
  "scripts": {
    "ci": "rm -rf node_modules; yarn install --frozen-lockfile",
    "makecert": "bash dev/makecert.sh",
    "initdev": "bash dev/initdev.sh",
    "redis:load": "node dev/redis_load.js",
    "redis:save": "node dev/redis_save.js",
    "redis": "yarn redis:load",
    "spark:save": "node dev/spark_save.js",
    "spark:load": "node dev/spark_load.js",
    "spark": "yarn spark:load",
    "compose:setup": "yarn redis && yarn spark",
    "compose:new": "yarn initdev && yarn makecert && docker compose up -d --force-recreate && yarn compose:setup",
    "serve": "vite serve",
    "start": "yarn compose:new && yarn serve",
    "build": "vite build && du -h dist/",
    "test": "vitest",
    "test:ci": "vitest --run --coverage",
    "lint:eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore ./src ./test",
    "lint:prettier": "prettier --check ./src ./test ./dev/*.js ./*.js ./*.yml",
    "lint:tsc": "vue-tsc --noEmit",
    "lint": "yarn lint:tsc && yarn lint:eslint && yarn lint:prettier",
    "lint:fix:eslint": "yarn lint:eslint --fix",
    "lint:fix:prettier": "prettier --write ./src ./test ./dev/*.js ./*.js ./*.yml",
    "lint:fix": "yarn lint:fix:eslint && yarn lint:fix:prettier",
    "firmware": "bash dev/update-firmware.sh",
    "components": "vue-global-type-gen && echo 'export {};' >> src/auto-import.d.ts"
  },
  "dependencies": {
    "@quasar/extras": "^1.10.11",
    "axios": "^1.1.3",
    "brewblox-proto": "https://github.com/brewblox/brewblox-proto#7c46aa42",
    "buffer": "^6.0.3",
    "cm6-theme-basic-dark": "^0.2.0",
    "codemirror": "^6.0.0",
    "core-js": "^3.16.3",
    "d3": "^7.0.3",
    "date-fns": "^2.29.1",
    "dompurify": "^2.3.1",
    "elkjs": "^0.8.1",
    "fromentries": "^1.3.2",
    "immer": "^9.0.18",
    "js-quantities": "^1.7.6",
    "lodash": "^4.17.21",
    "marked": "^4.0.10",
    "mqtt": "^4.3.7",
    "nanoid": "^4.0.0",
    "parse-duration": "^1.0.0",
    "pinia": "^2.0.0-rc.10",
    "plotly.js": "^2.4.1",
    "portal-vue": "^3.0.0-beta.0",
    "process": "^0.11.10",
    "quasar": "^2.0.4",
    "simple-keyboard": "^3.5.57",
    "simple-keyboard-layouts": "^3.1.319",
    "svg-path-properties": "^1.0.11",
    "typescript-string-enums": "^1.0.0",
    "url": "^0.11.0",
    "vue": "^3.0.0",
    "vue-router": "^4.0.11",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@quasar/quasar-app-extension-testing-unit-vitest": "^0.1.1",
    "@quasar/vite-plugin": "^1.0.10",
    "@rollup/plugin-inject": "^5.0.1",
    "@types/d3": "^7.0.0",
    "@types/dompurify": "^2.2.3",
    "@types/js-quantities": "^1.6.2",
    "@types/lodash": "^4.14.172",
    "@types/marked": "^4.0.1",
    "@types/node": "18.8.0",
    "@types/plotly.js": "^2.12.7",
    "@types/pluralize": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vitest/coverage-c8": "^0.24.3",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.0.0-rc.18",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-quasar": "^1.0.0",
    "eslint-plugin-vue": "^9.6.0",
    "fibers": "^5.0.0",
    "jsdom": "^20.0.0",
    "minimist": "^1.2.5",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^3.0.0",
    "rollup": "^3.2.2",
    "rollup-plugin-visualizer": "^5.9.0",
    "sass": "1.32.0",
    "svgpath": "^2.3.1",
    "typescript": "~4.8",
    "vite": "^3.2.7",
    "vite-plugin-checker": "^0.5.1",
    "vitest": "^0.24.3",
    "vue-global-type-gen": "^1.1.0",
    "vue-tsc": "^1.6.0"
  },
  "engines": {
    "node": ">= 14",
    "npm": ">= 6.4.1"
  },
  "browserslist": [
    "defaults",
    "not IE > 0"
  ]
}
