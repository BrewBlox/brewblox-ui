{
  "name": "brewblox-ui",
  "version": "0.1.0",
  "description": "UI for the Brewblox brewing controller",
  "author": "Elco Jacobs / BrewPi B.V.",
  "repository": "https://github.com/BrewBlox/brewblox-ui",
  "license": "GPL-3.0",
  "scripts": {
    "makecert": "bash dev/makecert.sh",
    "history": "node dev/history_config.js",
    "redis:load": "node dev/redis_load.js",
    "redis:save": "node dev/redis_save.js",
    "redis": "npm run redis:load",
    "spark:save": "node dev/spark_save.js",
    "spark:load": "node dev/spark_load.js",
    "spark": "npm run spark:load",
    "compose:setup": "npm run redis && npm run history && npm run spark",
    "compose:new": "npm run makecert && docker-compose up -d --force-recreate && npm run compose:setup",
    "serve": "quasar dev",
    "start": "npm run compose:new && npm run serve",
    "build": "npm run makecert && quasar build",
    "devbuild": "rm -r dev/dist/*; npm run build && cp -r dist/* dev/dist/",
    "test": "npm run test:unit",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore ./src ./test",
    "lint:fix": "npm run lint -- --fix",
    "lint:nowarn": "npm run lint 2>&1 | grep -v '.*MaxListenersExceededWarning'",
    "test:unit": "jest --updateSnapshot",
    "test:unit:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "test:unit:watchAll": "jest --watchAll",
    "serve:test:coverage": "quasar serve test/jest/coverage/lcov-report/ --port 8788",
    "concurrently:dev:jest": "concurrently \"quasar dev\" \"jest --watch\""
  },
  "dependencies": {
    "@quasar/extras": "^1.9.18",
    "axios": "^0.21.1",
    "core-js": "^3.9.1",
    "dagre-d3": "^0.6.4",
    "fromentries": "^1.3.2",
    "js-quantities": "^1.7.6",
    "lodash": "^4.17.21",
    "marked": "^0.7.0",
    "mqtt": "^4.2.6",
    "nanoid": "^3.1.22",
    "parse-duration": "^0.1.3",
    "plotly.js-basic-dist": "^1.58.4",
    "quasar": "^2.0.0-beta.12",
    "query-string": "^6.14.1",
    "simple-keyboard": "^2.32.119",
    "simple-keyboard-layouts": "^1.15.155",
    "svg-path-properties": "^1.0.11",
    "typescript-string-enums": "^1.0.0",
    "url-safe-string": "^1.1.0",
    "vue-json-pretty": "^1.7.1",
    "vue-router": "^4.0.6",
    "vuedraggable": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@quasar/app": "^3.0.0-beta.13",
    "@quasar/quasar-app-extension-typescript": "^1.0.2",
    "@types/d3": "^5.16.4",
    "@types/dagre-d3": "^0.6.2",
    "@types/jest": "^23.3.14",
    "@types/js-quantities": "^1.6.2",
    "@types/lodash": "^4.14.168",
    "@types/nanoid": "^2.1.0",
    "@types/node": "11.9.5",
    "@types/plotly.js": "^1.54.9",
    "@types/webpack": "^4.41.27",
    "@types/webpack-chain": "^5.2.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@vue/devtools": "^6.0.0-beta.6",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-plugin-transform-imports": "^1.5.1",
    "eslint": "^7.23.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-quasar": "^1.0.0",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-vue": "^7.8.0",
    "eslint-webpack-plugin": "^2.5.3",
    "fibers": "^4.0.3",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "jest": "^25.5.4",
    "minimist": "^1.2.5",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "svgpath": "^2.3.1",
    "ts-loader": "^6.2.2",
    "tsutils": "^3.20.0",
    "vue-template-compiler": "^2.6.12",
    "vuex-class-modules": "^1.2.0"
  },
  "engines": {
    "node": ">= 14",
    "npm": ">= 6.4.1"
  },
  "browserslist": [
    "defaults",
    "not IE > 0"
  ]
}
