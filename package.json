{
  "name": "brewblox-ui",
  "version": "0.1.0",
  "description": "UI for the Brewblox brewing controller",
  "author": "Elco Jacobs / BrewPi B.V.",
  "repository": "https://github.com/BrewBlox/brewblox-ui",
  "license": "GPL-3.0",
  "scripts": {
    "makecert": "bash dev/makecert.sh",
    "history": "node dev/history_config.js",
    "datastore:config": "node dev/datastore_config.js",
    "datastore:load": "node dev/datastore_load.js",
    "datastore:save": "node dev/datastore_save.js",
    "datastore": "npm run datastore:config && npm run datastore:load",
    "spark:save": "node dev/spark_save.js",
    "spark:load": "node dev/spark_load.js",
    "spark": "npm run spark:load",
    "compose:setup": "npm run datastore && npm run history && npm run spark",
    "compose:new": "npm run makecert && docker-compose up -d --force-recreate && npm run compose:setup",
    "serve": "quasar dev",
    "start": "npm run compose:new && npm run serve",
    "build": "npm run makecert && quasar build",
    "devbuild": "rm -r dev/dist/*; npm run build && cp -r dist/* dev/dist/",
    "test": "npm run test:unit",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore ./src ./test",
    "lint:fix": "npm run lint -- --fix",
    "lint:nowarn": "npm run lint 2>&1 | grep -v '.*MaxListenersExceededWarning'",
    "test:unit": "jest --updateSnapshot",
    "test:unit:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "test:unit:watchAll": "jest --watchAll",
    "serve:test:coverage": "quasar serve test/jest/coverage/lcov-report/ --port 8788",
    "concurrently:dev:jest": "concurrently \"quasar dev\" \"jest --watch\""
  },
  "dependencies": {
    "@quasar/extras": "^1.8.2",
    "axios": "^0.19.2",
    "core-js": "^3.6.5",
    "dagre-d3": "^0.6.4",
    "fromentries": "^1.2.0",
    "lodash": "^4.17.19",
    "marked": "^0.7.0",
    "monaco-editor": "^0.20.0",
    "mqtt": "^4.1.0",
    "parse-duration": "^0.1.3",
    "plotly.js-basic-dist": "^1.54.6",
    "portal-vue": "^1.5.1",
    "pouchdb": "^7.2.1",
    "quasar": "^1.12.11",
    "query-string": "^6.13.1",
    "svg-path-properties": "^0.4.11",
    "typescript-string-enums": "^1.0.0",
    "url-safe-string": "^1.1.0",
    "vue": "^2.6.11",
    "vue-json-pretty": "^1.6.5",
    "vue-router": "^3.2.0",
    "vuedraggable": "^2.24.0",
    "vuex": "^3.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@quasar/app": "^2.0.5",
    "@quasar/quasar-app-extension-testing": "^1.0.0",
    "@quasar/quasar-app-extension-testing-unit-jest": "^1.1.0-beta.2",
    "@quasar/quasar-app-extension-typescript": "^1.0.2",
    "@types/d3": "^5.7.2",
    "@types/jest": "^23.3.14",
    "@types/lodash": "^4.14.157",
    "@types/node": "11.9.5",
    "@types/plotly.js": "^1.50.15",
    "@types/pouchdb": "^6.4.0",
    "@types/webpack": "^4.41.21",
    "@types/webpack-chain": "^5.2.0",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "@vue/devtools": "^5.3.3",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "^1.0.3",
    "babel-plugin-transform-imports": "^1.5.1",
    "eslint": "^5.16.0",
    "eslint-plugin-quasar": "^1.0.0",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-vue": "^5.2.3",
    "fibers": "^4.0.3",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "jest": "^25.5.4",
    "minimist": "^1.2.5",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "svgpath": "^2.3.0",
    "ts-jest": "^25.5.1",
    "ts-loader": "^6.2.2",
    "tsargs": "^1.4.0",
    "tsutils": "^3.17.1",
    "vue-class-component": "^6.3.2",
    "vue-property-decorator": "^8.5.1",
    "vue-template-compiler": "^2.6.11",
    "vuex-class-modules": "^1.1.2"
  },
  "engines": {
    "node": ">= 12",
    "npm": ">= 6.4.1"
  },
  "browserslist": [
    "defaults",
    "not IE > 0"
  ]
}
