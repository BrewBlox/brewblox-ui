{
  "name": "brewblox-ui",
  "version": "0.1.0",
  "description": "UI for the Brewblox brewing controller",
  "author": "Elco Jacobs / BrewPi B.V.",
  "repository": "https://github.com/BrewBlox/brewblox-ui",
  "license": "GPL-3.0",
  "scripts": {
    "ci": "rm -rf node_modules; yarn install --frozen-lockfile",
    "makecert": "bash dev/makecert.sh",
    "initdev": "bash dev/initdev.sh",
    "redis:load": "node dev/redis_load.js",
    "redis:save": "node dev/redis_save.js",
    "redis": "yarn redis:load",
    "spark:save": "node dev/spark_save.js",
    "spark:load": "node dev/spark_load.js",
    "spark": "yarn spark:load",
    "compose:setup": "yarn redis && yarn spark",
    "compose:new": "yarn initdev && yarn makecert && docker-compose up -d --force-recreate && yarn compose:setup",
    "serve": "vite serve",
    "start": "yarn compose:new && yarn serve",
    "build": "yarn makecert && vite build",
    "devtools": "vue-devtools",
    "test": "yarn test:unit",
    "lint:eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore ./src ./test",
    "lint:prettier": "prettier --check ./src ./test ./dev/*.js ./*.js ./*.yml",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:fix:eslint": "yarn lint:eslint --fix",
    "lint:fix:prettier": "prettier --write ./src ./test ./dev/*.js ./*.js ./*.yml",
    "lint:fix": "yarn lint:fix:eslint && yarn lint:fix:prettier",
    "test:unit": "jest --updateSnapshot",
    "test:unit:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "test:unit:watchAll": "jest --watchAll",
    "serve:test:coverage": "quasar serve test/jest/coverage/lcov-report/ --port 8788",
    "concurrently:dev:jest": "concurrently \"quasar dev\" \"jest --watch\""
  },
  "dependencies": {
    "@quasar/extras": "^1.10.11",
    "axios": "^0.26.1",
    "buffer": "^6.0.3",
    "cm6-theme-basic-dark": "^0.2.0",
    "codemirror": "^6.0.0",
    "core-js": "^3.16.3",
    "d3": "^7.0.3",
    "date-fns": "^2.23.0",
    "dompurify": "^2.3.1",
    "elkjs": "^0.8.1",
    "fromentries": "^1.3.2",
    "js-quantities": "^1.7.6",
    "lodash": "^4.17.21",
    "marked": "^4.0.10",
    "mqtt": "^4.3.7",
    "nanoid": "^3.1.31",
    "parse-duration": "^1.0.0",
    "pinia": "^2.0.0-rc.10",
    "plotly.js": "^2.4.1",
    "portal-vue": "^3.0.0-beta.0",
    "posix_tz_db": "https://github.com/nayarsystems/posix_tz_db.git#master",
    "process": "^0.11.10",
    "quasar": "^2.0.4",
    "simple-keyboard": "^3.4.107",
    "simple-keyboard-layouts": "^3.0.194",
    "svg-path-properties": "^1.0.11",
    "typescript-string-enums": "^1.0.0",
    "url": "^0.11.0",
    "vue": "^3.0.0",
    "vue-router": "^4.0.11",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.4.2",
    "@quasar/app": "^3.1.0",
    "@quasar/vite-plugin": "^1.0.10",
    "@rollup/plugin-inject": "^4.0.4",
    "@types/d3": "^7.0.0",
    "@types/dompurify": "^2.2.3",
    "@types/jest": "^27.0.2",
    "@types/js-quantities": "^1.6.2",
    "@types/lodash": "^4.14.172",
    "@types/marked": "^4.0.1",
    "@types/node": "^17.0.23",
    "@types/plotly.js": "^1.54.14",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/devtools": "^6.0.0-beta.21",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.12",
    "eslint": "~7",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-quasar": "^1.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "fibers": "^5.0.0",
    "jest": "^27.2.4",
    "minimist": "^1.2.5",
    "node-sass": "^7.0.0",
    "prettier": "^2.3.2",
    "rollup": "^2.75.7",
    "sass": "1.32.0",
    "svgpath": "^2.3.1",
    "ts-jest": "^27.0.5",
    "tsutils": "^3.20.0",
    "typescript": "~4.4.0",
    "vite": "^2.9.13",
    "vite-plugin-linter": "^1.2.0",
    "vite-tsconfig-paths": "^3.5.0",
    "vue-template-compiler": "^2.6.14",
    "vue-tsc": "^0.38.2"
  },
  "engines": {
    "node": ">= 14",
    "npm": ">= 6.4.1"
  },
  "browserslist": [
    "defaults",
    "not IE > 0"
  ]
}
