{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      // Required for quasar-generated entrypoint script
      "boot/*": [
        "src/boot/*"
      ],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "types": [
      "quasar",
      "jest",
      "webpack-env"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "test/**/*.ts",
    "test/**/*.vue"
  ],
  "exclude": [
    "/dev",
    "/dist",
    ".quasar",
    ".vscode",
    "node_modules",
    "**/*.wip"
  ]
}
